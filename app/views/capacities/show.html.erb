<div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
  <div class="mx-auto max-w-3xl text-center">
    <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl dark:text-white">
      Engineering Team Capacity Dashboard
    </h2>
  </div>

  <dl class="mt-6 grid grid-cols-1 gap-4 sm:mt-8 sm:grid-cols-2 lg:grid-cols-4">
    <div
      class="flex flex-col rounded-lg border border-gray-100 px-4 py-8 text-center dark:border-gray-800"
    >
      <dt class="order-last text-lg font-medium text-gray-500 dark:text-gray-400">Total Capacity of Year</dt>

      <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl"><%= @monthly_stats["Monthly Total"].sum %></dd>
    </div>

    <div
      class="flex flex-col rounded-lg border border-gray-100 px-4 py-8 text-center dark:border-gray-800"
    >
      <dt class="order-last text-lg font-medium text-gray-500 dark:text-gray-400">
        H1 Capacity
      </dt>
      <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl"><%= @monthly_stats["H1 Total"] %></dd>
    </div>

    <div
      class="flex flex-col rounded-lg border border-gray-100 px-4 py-8 text-center dark:border-gray-800"
    >
      <dt class="order-last text-lg font-medium text-gray-500 dark:text-gray-400">H2 Capacity</dt>

      <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl"><%= @monthly_stats["H2 Total"] %></dd>
    </div>

    <div
      class="flex flex-col rounded-lg border border-gray-100 px-4 py-8 text-center dark:border-gray-800"
    >
      <dt class="order-last text-lg font-medium text-gray-500 dark:text-gray-400">Holiday remaining</dt>

      <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl"><%= @holiday_remainings %></dd>
    </div>
  </dl>
</div>

<div class="overflow-x-auto shadow-md">
  <table
    class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm dark:divide-gray-700 dark:bg-gray-900"
  >
    <caption class="p-5 text-lg font-semibold text-left rtl:text-right text-gray-900 bg-white dark:text-white dark:bg-gray-800">
      The Monthly Engineering Capacity
      <p class="mt-1 text-sm font-normal text-gray-500 dark:text-gray-400">It gives the summary of all employee engineering days.</p>
    </caption>
    <thead class="ltr:text-left rtl:text-right">
      <tr>
        <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900 dark:text-white font-bold border-b-2 border-blue-500">Name</th>
        <% @current_month = Date.today.month - 1 %>
        <% @month_names.each_with_index do |month_name, index| %>
          <% @column_colour = index == @current_month ? "dark:bg-gray-800" : "" %>
          <th class="whitespace-nowrap px-4 py-2 font-medium text-gray-900 dark:text-white font-bold border-b-2 border-green-500 <%= @column_colour %>">
            <%= month_name.to_s.titleize %>
          </th>
        <%  end %>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @employees_engineering_days.each do |employee_engineering_days| %>
        <tr class="dark:hover:bg-gray-600">
          <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900 dark:text-white text-center">
            <%= employee_engineering_days[0].to_s.titleize %>
          </td>
          <% employee_engineering_days.slice(1, employee_engineering_days.length).each_with_index do |days, index| %>
            <% @column_colour = index == @current_month ? "dark:bg-gray-800" : "" %>
            <td class="whitespace-nowrap px-4 py-2 text-gray-700 dark:text-gray-200 text-center <%= @column_colour %>">
              <%= days %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

